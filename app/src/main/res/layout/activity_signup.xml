<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Bottles!"
            android:textColor="@color/bottlesPrimary"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="20dp"
                android:textColor="@color/bottlesPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디를 생성해 보세요:)"
                android:textSize="15dp"/>

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/border2"
                android:id="@+id/signId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLength="30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="check id"
                android:textColor="@color/bottlesPrimary"
                android:textSize="15dp"
                android:id="@+id/checkId"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="20dp"
                android:textColor="@color/bottlesPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호를 생성하세요."
                android:textSize="15dp"/>
            <EditText
                android:background="@drawable/border2"
                android:id="@+id/signPassword"
                android:maxLength="30"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                android:textColor="@color/bottlesPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름 정보는 프로필 상단에 표시되며\n이를 통해 친구와 연결될 수 있습니다."
                android:textSize="15dp"/>
            <EditText
                android:background="@drawable/border2"
                android:id="@+id/signUserName"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:maxLength="30"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textSize="20dp"
                android:textColor="@color/bottlesPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일 정보는 계정 분실 시 이용됩니다.\n정확한 주소를 입력해 주세요."
                android:textSize="15dp"/>
            <EditText
                android:background="@drawable/border2"
                android:id="@+id/signEmail"
                android:layout_marginTop="10dp"
                android:maxLength="40"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About you"
                android:textSize="20dp"
                android:textColor="@color/bottlesPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'서론'은 프로필에 표시되는 당신에 대한\n소개입니다. 자유롭게 표현해보세요!"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/signPreface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border2"
                android:maxLength="450"
                android:hint="\n\n\n\n\n\n"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="75dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#f5f5f5"
        android:onClick="onCilck1"
        android:id="@+id/signUpButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join US:)"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>




    </LinearLayout>
</ScrollView>